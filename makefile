# ----------------------------------------------------------------------------------
#  CONFIG
# ----------------------------------------------------------------------------------
EXE ?= application

CC = gcc
LINKER_FLAGS = -lusb-1.0
SRC_FILES = src/*.c

EXE_EXT =

# ----------------------------------------------------------------------------------
#  OS SETUP
# ----------------------------------------------------------------------------------
ifeq ($(OS),Windows_NT)
	EXE_EXT = .exe
endif

build:
	$(CC) $(SRC_FILES) $(LINKER_FLAGS) -o $(EXE)$(EXE_EXT)

run:
	./$(EXE)$(EXE_EXT)

clean:
	rm -r $(EXE)$(EXE_EXT)